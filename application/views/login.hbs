<main>
  <h2>Login Form</h2>
  <form method="POST"
  action = "/users/login"
  enctype="application/x-www-form-urlencoded">
    <div class='input-group'>
      <div>
        <label for='username'>Username</label>
        <input
          type='text'
          name='username'
          id='username'
          placeholder='Username'
          required
        />
      </div>

      <br />
      <div>
        <label for='password'>Password</label>
        <input
          type='password'
          name='password'
          id='password'
          placeholder='password'
          required
        />
      </div>

      <br />
      <div class='button'>
        <button type='submit'>Log in</button>
      </div>
      <br />
      <div class='button'>
     <a href='/registration'>Have not registered yet? Sign up here</a>
      </div>

    </div>
  </form>
</main>